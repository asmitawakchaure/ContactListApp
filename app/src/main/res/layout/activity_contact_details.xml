<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.contactlistapplication.activities.ContactDetailsActivity">

    <android.support.v7.widget.CardView
        android:id="@+id/cvContacts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        card_view:cardBackgroundColor="@color/colorWhite"
        card_view:cardCornerRadius="5dp"
        card_view:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_5sdp"
            android:orientation="vertical">
            
            <com.contactlistapplication.custom_views.CustomTextViewRegular
                android:id="@+id/tvName"
                style="@style/MediumBlackText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <com.contactlistapplication.custom_views.CustomTextViewRegular
                android:id="@+id/tvAddress"
                style="@style/CustomBlackText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <com.contactlistapplication.custom_views.CustomTextViewRegular
                android:id="@+id/tvCompany"
                style="@style/CustomBlackText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <com.contactlistapplication.custom_views.CustomTextViewRegular
                android:id="@+id/tvCompanybs"
                style="@style/CustomBlackText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <com.contactlistapplication.custom_views.CustomTextViewBold
                android:id="@+id/tvCompanyCatchPhrase"
                style="@style/CustomBlackText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="italic" />

           
            <ImageView
                android:id="@+id/ivMap"
                android:contentDescription="@string/static_image"
                android:layout_width="@dimen/_150sdp"
                android:layout_height="@dimen/_150sdp" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</android.support.v7.widget.LinearLayoutCompat>
