<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <declare-styleable name="CustomTextViewRegular">
        <attr name="fonts" format="string" />
    </declare-styleable>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/dialog_enter</item>
        <item name="android:windowExitAnimation">@anim/dialog_exit</item>
    </style>

    <style name="MediumBlackText" parent="android:style/Widget.TextView">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">@dimen/_16sdp</item>

    </style>

    <style name="CustomBlackText" parent="android:style/Widget.TextView">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:padding">@dimen/_2sdp</item>

    </style>

    <style name="SmallBlackText" parent="android:style/Widget.TextView">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:padding">@dimen/_2sdp</item>
    </style>

</resources>
